<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.zchang.onchart" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="me.zchang.onchart.config.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.zchang.onchart.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.zchang.onchart.http.HttpTestActivity"
            android:label="@string/title_activity_http_test" >
        </activity>
        <activity
            android:name="me.zchang.onchart.ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
