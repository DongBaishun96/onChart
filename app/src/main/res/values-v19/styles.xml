<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>
    <style name="TranslucentActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="ActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>

</resources>